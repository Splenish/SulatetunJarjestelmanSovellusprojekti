  <body>
    <div class="wrapper">
      <div class="header">
        <div class="left">
          <a href="/" style="color: white;"><h2><b>Vehicle Tracker</b></h2></a>
          <p><i>Keeps you on the road</i></p>
        </div>
        <div class="right">
          <a href="/#info">Info</a>
          {{#if sessionExists}}
            <a href="/map">Map</a>
            <a href="/list">List</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
          {{else}}
            <a href="#" onclick="document.getElementById('loginPopup').style.display='block'">Login</a>
          {{/if}}
        </div>
      </div>

      <div class="">



        {{#if sessionExists}}{{else}}
        <div class="content">
          <h1>Welcome,</h1><br>
          <p>Company information</p>
        </div>

          <centre>
          <table>
          <tr>
            <th>Company name</th>
            <th>Last Name</th>

          </tr>
          <tr>
          <th>Full Name</th>
            <td>Peter</td>


          </tr>
          <tr>
          <th>Phone number</th>
            <td>Lois</td>

          </tr>
          <tr>
          <th>Email</th>
            <td>Joe</td>

          </tr>

        </table>
      </centre>


        <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Edit</button>
        <div id="id01" class="modal">

          <form class="modal-content containereditanimate" action="/action_page.php">


                <div class="container_edit">
                  <form action="/action_page.php">

                    <div class="row">
                      <div class="editcol-25">
                        <label for="company">Company</label>
                      </div>
                      <div class="editcol-75">
                        <input type="text" id="company" name="company" placeholder="Your company..">
                      </div>
                    </div>
                    <div class="row">
                      <div class="editcol-25">
                        <label for="lname">Full Name</label>
                      </div>
                      <div class="editcol-75">
                        <input type="text" id="flname" name="flastname" placeholder="Your name..">
                      </div>
                    </div>

                     <div class="row">
                      <div class="editcol-25">
                        <label for="phonenumber">Phone number</label>
                      </div>
                      <div class="editcol-75">
                        <input type="text" id="phonenumber" name="phonenumber" placeholder="Insert your phone number..">
                      </div>
                    </div>

                      <div class="row">
                      <div class="editcol-25">
                        <label for="email">Email</label>
                      </div>
                      <div class="editcol-75">
                        <input type="text" id="email" name="email" placeholder="Your email..">
                      </div>
                    </div>

                    <div class="row">
                      <input type="submit" value="Submit">
                            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
                    </div>
                  </form>
                </div>

        </div>


        <div class="content">
          <h1>Log in to view this pages information.</h1>
        </div>

        {{/if}}
      </div>
      <div class="footer">
        <p>Created by Kimmo Raappana, Niina Harja and Riku Kaipainen. 2018</p>
      </div>
    </div>
